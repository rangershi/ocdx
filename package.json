{
  "name": "opencode-hello-world",
  "version": "0.1.0",
  "description": "A simple hello world OpenCode plugin",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src/version.ts",
    "src/prompts",
    "docs/pr-review-loop-reference.md"
  ],
  "keywords": [
    "opencode",
    "plugin",
    "hello-world"
  ],
  "scripts": {
    "build": "tsc",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@opencode-ai/plugin": "^1.1.15"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^20.11.5",
    "bun-types": "latest",
    "eslint": "^9.0.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.47.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
