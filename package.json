{
  "name": "ocdx",
  "version": "0.1.2",
  "description": "A simple hello world OpenCode plugin",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rangershi/ocdx.git"
  },
  "bugs": {
    "url": "https://github.com/rangershi/ocdx/issues"
  },
  "homepage": "https://github.com/rangershi/ocdx#readme",
  "type": "module",
  "packageManager": "pnpm@10.26.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "@asset",
    "dist",
    "scripts",
    "src/version.ts",
    "src/prompts",
    "docs/pr-review-loop-reference.md"
  ],
  "keywords": [
    "opencode",
    "plugin",
    "pr-review"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsc",
    "postinstall": "node scripts/postinstall.mjs",
    "prepack": "pnpm run clean && pnpm run build",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@opencode-ai/plugin": "^1.1.15"
  },
  "peerDependencies": {
    "@opencode-ai/plugin": ">=1.1.15"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^20.11.5",
    "bun-types": "latest",
    "eslint": "^9.0.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.47.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
